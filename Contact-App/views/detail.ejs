<%- include('layouts/header') %>
    <%- include('layouts/navbar') %>

        <div class="container mx-auto px-4 py-8">
            <!-- Back Button -->
            <div class="mb-6">
                <button onclick="history.back()" class="inline-flex items-center text-blue-600 hover:text-blue-800">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Contacts
                    </>
            </div>

            <!-- Contact Card -->
            <div class="bg-white rounded-xl shadow-md overflow-hidden max-w-4xl mx-auto">
                <div class="flex flex-col md:flex-row">
                    <!-- Left Column - Photo -->
                    <div class="w-full md:w-1/3 bg-gray-100 p-8 flex flex-col items-center justify-center">
                        <div
                            class="w-48 h-48 rounded-full bg-blue-100 flex items-center justify-center mb-6 overflow-hidden">
                            <img src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=880&q=80"
                                alt="Profile Photo" class="w-full h-full object-cover">
                        </div>
                        <h2 class="text-2xl font-bold text-gray-800 mb-1">
                            <%= contact.name %>
                        </h2>
                        <p class="text-gray-600 mb-6">
                            <%= contact.jobTitle %>
                        </p>
                        <div class="flex space-x-4">
                            <a href="#" class="text-blue-500 hover:text-blue-700">
                                <i class="fab fa-linkedin text-xl"></i>
                            </a>
                            <a href="#" class="text-gray-700 hover:text-gray-900">
                                <i class="fab fa-github text-xl"></i>
                            </a>
                            <a href="#" class="text-blue-400 hover:text-blue-600">
                                <i class="fab fa-twitter text-xl"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Right Column - Info -->
                    <div class="w-full md:w-2/3 p-8">
                        <div class="mb-8">
                            <h3 class="text-xl font-semibold text-gray-800 mb-4 border-b pb-2">Contact Information</h3>
                            <div class="space-y-4">
                                <div class="flex items-start">
                                    <div class="w-8 text-gray-500">
                                        <i class="fas fa-phone"></i>
                                    </div>
                                    <div>
                                        <p class="text-gray-600">Phone</p>
                                        <p class="text-gray-800 font-medium">
                                            <%= contact.phone %>
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-start">
                                    <div class="w-8 text-gray-500">
                                        <i class="fas fa-envelope"></i>
                                    </div>
                                    <div>
                                        <p class="text-gray-600">Email</p>
                                        <p class="text-gray-800 font-medium">
                                            <%= contact.email %>
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-start">
                                    <div class="w-8 text-gray-500">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </div>
                                    <div>
                                        <p class="text-gray-600">Address</p>
                                        <p class="text-gray-800 font-medium">
                                            <%= contact.address %>
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-start">
                                    <div class="w-8 text-gray-500">
                                        <i class="fas fa-birthday-cake"></i>
                                    </div>
                                    <div>
                                        <p class="text-gray-600">Birthday</p>
                                        <p class="text-gray-800 font-medium">
                                            <%= contact.birthday ? contact.birthday.toISOString().split('T')[0] : '' %>

                                        </p>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="flex space-x-4">
                            <a href="/contact/edit/<%= contact.id %>" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                                <i class="fas fa-edit mr-2"></i> Edit Contact
                            </a>
                            <button
                                class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                                <i class="fas fa-share-alt mr-2"></i> Share
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('layouts/footer') %>