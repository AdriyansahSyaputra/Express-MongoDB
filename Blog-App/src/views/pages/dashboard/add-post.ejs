<%- include('/layouts/dashboard/header') %>
<%- include('/layouts/dashboard/topbar') %>
<%- include('/layouts/dashboard/sidebar') %>

<main id="main-content" class="pt-20 pb-10 px-4 transition-all duration-300 ml-64">
    <div class="max-w-6xl mx-auto">
        <!-- Page Header -->
        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Add New Post</h1>
                <p class="text-gray-600 dark:text-gray-400">Create and publish a new blog post</p>
            </div>
            <div class="flex space-x-3">
                <button
                    class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                    Save Draft
                </button>
                <button class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
                    Publish
                </button>
            </div>
        </div>

        <!-- Two Column Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Left Column (Form) -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Post Title -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <label for="post-title" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Post
                        Title</label>
                    <input type="text" id="post-title"
                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500"
                        placeholder="Enter post title...">
                </div>

                <!-- Post Content Editor -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow">
                    <div class="p-4 border-b border-gray-200 dark:border-gray-700">
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Post Content</label>
                    </div>
                    <div id="editor" class="p-4"></div>
                </div>

                <!-- Excerpt -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <label for="post-excerpt"
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Excerpt</label>
                    <textarea id="post-excerpt" rows="3"
                        class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-blue-500 focus:border-blue-500"
                        placeholder="Write a short excerpt..."></textarea>
                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">A brief description of your post for SEO
                        and preview purposes.</p>
                </div>
            </div>

            <!-- Right Column (Settings) -->
            <div class="space-y-6">
                <!-- Publish Card -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h3 class="text-lg font-medium text-gray-800 dark:text-white mb-4">Publish</h3>
                    <div class="space-y-4">
                        <div>
                            <label
                                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
                            <select
                                class="w-full border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white p-2 text-sm focus:ring-blue-500 focus:border-blue-500">
                                <option>Draft</option>
                                <option>Published</option>
                                <option>Scheduled</option>
                            </select>
                        </div>

                        <div>
                            <label
                                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Visibility</label>
                            <select
                                class="w-full border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white p-2 text-sm focus:ring-blue-500 focus:border-blue-500">
                                <option>Public</option>
                                <option>Private</option>
                                <option>Password Protected</option>
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Publish
                                Date</label>
                            <input type="datetime-local"
                                class="w-full border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white p-2 text-sm focus:ring-blue-500 focus:border-blue-500">
                        </div>

                        <div class="pt-4 border-t border-gray-200 dark:border-gray-700 flex justify-between">
                            <button
                                class="text-sm text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white">
                                Move to Trash
                            </button>
                            <button
                                class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm transition-colors">
                                Publish
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Featured Image -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h3 class="text-lg font-medium text-gray-800 dark:text-white mb-4">Featured Image</h3>
                    <div id="image-upload-container"
                        class="border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-4 text-center cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                        <div id="image-preview-placeholder">
                            <i class="fas fa-image text-4xl text-gray-400 mb-2"></i>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Click to upload or drag and drop</p>
                            <p class="text-xs text-gray-400 mt-1">Recommended size: 1200x630 pixels</p>
                        </div>
                        <img id="image-preview" src="#" alt="Preview"
                            class="hidden image-preview w-full mb-2 rounded-lg">
                        <input type="file" id="image-upload" accept="image/*" class="hidden">
                    </div>
                    <button id="remove-image-btn"
                        class="mt-2 text-sm text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 hidden">
                        Remove image
                    </button>
                </div>

                <!-- Categories -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h3 class="text-lg font-medium text-gray-800 dark:text-white mb-4">Categories</h3>
                    <div class="space-y-2">
                        <div class="flex items-center">
                            <input id="tech-category" type="checkbox"
                                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700">
                            <label for="tech-category"
                                class="ml-2 text-sm text-gray-700 dark:text-gray-300">Technology</label>
                        </div>
                        <div class="flex items-center">
                            <input id="webdev-category" type="checkbox"
                                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700">
                            <label for="webdev-category" class="ml-2 text-sm text-gray-700 dark:text-gray-300">Web
                                Development</label>
                        </div>
                        <div class="flex items-center">
                            <input id="nodejs-category" type="checkbox"
                                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700">
                            <label for="nodejs-category"
                                class="ml-2 text-sm text-gray-700 dark:text-gray-300">Node.js</label>
                        </div>
                        <div class="flex items-center">
                            <input id="database-category" type="checkbox"
                                class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700">
                            <label for="database-category"
                                class="ml-2 text-sm text-gray-700 dark:text-gray-300">Database</label>
                        </div>
                    </div>
                    <button
                        class="mt-3 text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">
                        <i class="fas fa-plus mr-1"></i> Add New Category
                    </button>
                </div>

                <!-- Tags -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h3 class="text-lg font-medium text-gray-800 dark:text-white mb-4">Tags</h3>
                    <div class="flex flex-wrap gap-2 mb-3" id="tags-container">
                        <!-- Tags will be added here -->
                    </div>
                    <div class="flex">
                        <input type="text" id="tag-input"
                            class="flex-1 border border-gray-300 dark:border-gray-600 rounded-l-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white p-2 text-sm focus:ring-blue-500 focus:border-blue-500"
                            placeholder="Add tag...">
                        <button id="add-tag-btn"
                            class="px-3 bg-blue-600 hover:bg-blue-700 text-white rounded-r-lg text-sm transition-colors">
                            Add
                        </button>
                    </div>
                </div>

                <!-- SEO Settings -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-6">
                    <h3 class="text-lg font-medium text-gray-800 dark:text-white mb-4">SEO Settings</h3>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Meta
                                Title</label>
                            <input type="text"
                                class="w-full border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white p-2 text-sm focus:ring-blue-500 focus:border-blue-500"
                                placeholder="SEO title...">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Meta
                                Description</label>
                            <textarea rows="3"
                                class="w-full border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white p-2 text-sm focus:ring-blue-500 focus:border-blue-500"
                                placeholder="SEO description..."></textarea>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Slug</label>
                            <input type="text"
                                class="w-full border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white p-2 text-sm focus:ring-blue-500 focus:border-blue-500"
                                placeholder="custom-url-slug">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('/layouts/dashboard/footer') %>